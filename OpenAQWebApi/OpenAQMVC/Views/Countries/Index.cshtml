@using OpenAQApiWrapper.Responses;
@using OpenAQApiWrapper.Entities;

@model PagedResponse<Country>

<h1 class="display-4">Countries</h1>
<form class="row g-3">
    <div class="col-md-6">
        <label for="pageSize" class="form-label">Items Per Page</label>
        <select class="form-select" id="pageSize">
            <option value="10" selected>10</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>

    <div class="col-md-6">
        <label for="sortBy" class="form-label">Sort Order</label>
        <select class="form-select" id="sortBy">
            <option value="0" selected>Ascending</option>
            <option value="10">Descending</option>
        </select>
    </div>

    <div class="col-md-12">
        <button type="submit" class="btn btn-primary btn-block">Filter</button>
    </div>
</form>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Locations</th>
            <th scope="col">First Updated</th>
            <th scope="col">Last Updated</th>
            <th scope="col">Parameters</th>
            <th scope="col">Count</th>
            <th scope="col">Cities</th>
            <th scope="col">Sources</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }

        @foreach (var country in Model.Results)
        {
            <tr>
                <td>@(((Model.Metadata.Page - 1) * Model.Metadata.Limit) + index)</td>
                <td>@country.Code</td>
                <td>@country.Name</td>
                <td>@country.Locations</td>
                <td>@country.FirstUpdated</td>
                <td>@country.LastUpdated</td>
                <td>@string.Join(", ", country.Parameters.OrderBy(x => x))</td>
                <td>@country.Count</td>
                <td>@country.Cities</td>
                <td>@country.Sources</td>
            </tr>

            index++;
        }
    </tbody>
</table>
